#!/bin/sh

ret=$PWD

# configure sam
mkdir build/sam
cd ./src/sam && qmake CONFIG+=release && make clean
cd $ret

# configure samtester
mkdir build/samtest
cd ./src/sam/test && qmake CONFIG+=release && make clean
cd $ret

# configure libsac
mkdir build/libsac
cd ./src/client && qmake CONFIG+=release && make clean
cd $ret

# configure saminput client
mkdir build/saminput
cd ./src/client/examples/saminput && qmake CONFIG+=release && make clean
cd $ret

# configure samugen client
mkdir build/samugen
cd ./src/client/examples/samugen && qmake CONFIG+=release && make clean
cd $ret

echo ""
echo "Done"
echo ""

